{
  "type": "interpreter-config",
  "configurations": [
    {
      "settings": [
        {
          "driverOptions": {
              "host": "localhost",
              "port": 4445
           },
          "browserOptions": {
              "browserName": "firefox",
              "username": "${SAUCE_USERNAME}",
              "accessKey": "${SAUCE_ACCESS_KEY}",
              "tunnel-identifier": "${TRAVIS_JOB_NUMBER}",
              "build": "${TRAVIS_BUILD_NUMBER}",
              "tags": [
                "${TRAVIS_BRANCH}",
                "${TRAVIS_MESSAGE}",
                "${TRAVIS_PULL_REQUEST}"
              ]
           }
        }
      ],
      "scripts": [
        "ci/selenium2-tests/*"
      ]
    }
  ]
}